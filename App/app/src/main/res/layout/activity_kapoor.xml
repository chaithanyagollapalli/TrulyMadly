<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kapoor">


    <ImageButton
        android:id="@+id/btnMenuKapoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ProfilesKapoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/profiles"
        android:textColor="@color/grey_1"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintEnd_toStartOf="@+id/ibChartKapoor"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_percentage__1_"/>

    <ImageView
        android:id="@+id/ibChartKapoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/ic_baseline_message_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/rectangleLineKapoor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_50"
        android:background="#C4C4C4"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollVerticalKapoor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="51dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangleLine">

        <LinearLayout
            android:id="@+id/linearLayoutKapoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:scrollbarThumbHorizontal="@color/grey">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="430dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/kapoor_1" />

                    <ImageView
                        android:layout_width="430dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/kapoor_2" />

                    <ImageView
                        android:layout_width="430dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/kapoor_3" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_hashtag_black"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/text_safeLove" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/rectangle_hashtag_black"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/text_charming" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/rectangle_hashtag_black"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/text_fitnessFreak" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/rectangle_hashtag_black"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/text_ambitious" />

            </LinearLayout>

            <TextView
                android:id="@+id/rectangleLine2Kapoor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#C4C4C4" />

            <TextView
                android:id="@+id/studyKapoor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableStart="@drawable/ic_briefcase"
                android:drawablePadding="@dimen/dp_20"
                android:text="@string/Doctors"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/degreeKapoor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:drawableStart="@drawable/ic_graduation_hat"
                android:drawablePadding="@dimen/dp_15"
                android:text="@string/mbbs"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/rectangleLine3Kapoor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#C4C4C4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:weightSum="5">

                <ImageButton
                    android:id="@+id/ibBar1Kapoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_film" />

                <ImageButton
                    android:id="@+id/ibBar2Kapoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_music_note" />

                <ImageButton
                    android:id="@+id/ibBar3Kapoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_book" />

                <ImageButton
                    android:id="@+id/ibBar4Kapoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_knife" />

                <ImageButton
                    android:id="@+id/ibBar5Kapoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_social" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10">

                <View
                    android:id="@+id/viewNB1Kapoor"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/navigation" />

                <View
                    android:id="@+id/viewNB2Kapoor"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/navigation"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/viewNB3Kapoor"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/navigation"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/viewNB4Kapoor"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/navigation"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/viewNB5Kapoor"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/navigation"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                android:drawableStart="@drawable/ic_baseline_warning_24"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/report"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_25">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="200dp"
                    app:cardCornerRadius="@dimen/dp_50">

                    <ImageView
                        android:id="@+id/imCloseKapoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/ic_baseline_close_24" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:elevation="200dp"
                    app:cardCornerRadius="@dimen/dp_50">


                    <ImageView
                        android:id="@+id/imRocketKapoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/ic_rocket" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:elevation="200dp"
                    app:cardCornerRadius="@dimen/dp_50">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/ic_credit_card" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:elevation="200dp"
                    app:cardCornerRadius="@dimen/dp_50">

                    <ImageView
                        android:id="@+id/imDoneKapoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/ic_baseline_done_24" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


