<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoostActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/rectangle_boost"
        android:textSize="@dimen/sp_22"
        android:text="@string/text_buy_boots"
        android:textStyle="bold"
        android:id="@+id/mtvboost"
        android:textColor="@color/white"
        android:paddingTop="@dimen/dp_50"
        android:gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/ic_rocket"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_cancel"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@id/mtvboost"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-186dp">

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/ic_rocket" />
    </HorizontalScrollView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/text_out_of_boosts"
    android:textStyle="bold"
    android:id="@+id/mtvoutofboots"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/mtvboost"
    android:layout_marginTop="@dimen/dp_50"
    android:textSize="@dimen/sp_22"
    android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be the top profile .More Views = More Views"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toBottomOf="@id/mtvboost"
        android:layout_marginTop="80dp"
        android:id="@+id/mtvMoreViews"
        android:layout_marginLeft="@dimen/dp_30" />

    <TextView
        android:layout_width="@dimen/dp_150"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtvMoreViews"
        android:background="@drawable/rectangle_price"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
    android:text="3 BOOST save 0%"
        android:textSize="28sp"
        android:id="@+id/mtvsave"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="@dimen/dp_150"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtvsave"
        android:background="@drawable/rectangle_price"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        android:text="18 BOOST save 50%"
        android:textSize="28sp"
        android:id="@+id/mtvsave2"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="@dimen/dp_150"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtvsave2"
        android:background="@drawable/rectangle_price"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        android:text="60 BOOST save 75%"
        android:textSize="28sp"
        android:id="@+id/mtvsave3"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="@dimen/dp_150"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtvMoreViews"
        android:background="@drawable/rectangle_pricetag"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="@dimen/dp_50"
        android:text="$ 699"
        android:paddingTop="@dimen/dp_10"
        android:textSize="28sp"
        android:id="@+id/mtvpricetag"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="@dimen/dp_150"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtvpricetag"
        android:background="@drawable/rectangle_pricetag"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="@dimen/dp_50"
        android:text="$ 799"
        android:paddingTop="@dimen/dp_10"
        android:textSize="28sp"
        android:id="@+id/mtvpricetag2"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="@dimen/dp_150"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtvpricetag2"
        android:background="@drawable/rectangle_pricetag"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="@dimen/dp_50"
        android:text="$ 899"
        android:paddingTop="@dimen/dp_10"
        android:textSize="28sp"
        android:id="@+id/mtvpricetag3"
        android:textColor="@color/white"/>

<TextView
    android:layout_width="@dimen/dp_50"
    android:layout_height="@dimen/dp_30"
    android:background="@drawable/rectangle_pricebuy"
    app:layout_constraintBottom_toBottomOf="@id/mtvpricetag"
    app:layout_constraintRight_toRightOf="@id/mtvpricetag"
    android:layout_marginBottom="@dimen/dp_20"
    android:text="Buy"
    android:textColor="@color/white"
    android:gravity="center"
    android:textSize="@dimen/sp_22"/>

    <TextView
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/rectangle_pricebuy"
        app:layout_constraintBottom_toBottomOf="@id/mtvpricetag2"
        app:layout_constraintRight_toRightOf="@id/mtvpricetag2"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="Buy"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_22"/>
    <TextView
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/rectangle_pricebuy"
        app:layout_constraintBottom_toBottomOf="@id/mtvpricetag3"
        app:layout_constraintRight_toRightOf="@id/mtvpricetag3"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="Buy"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_22"/>
    <TextView
        android:layout_width="match_parent"
app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_100"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/rectangle_clock"
        android:text="offer ENDS IN OFFER ENDS IN"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        android:drawableStart="@drawable/ic_clock"
        android:drawableEnd="@drawable/ic_clock"
        android:textStyle="italic"/>
<ImageView
    android:layout_width="@dimen/dp_200"
    android:layout_height="wrap_content"
android:src="@drawable/seventy_five_off"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
